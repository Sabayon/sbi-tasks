name: "SCR {{.SCRRepo}}"
source: https://github.com/Sabayon/community-repositories
directory: /{{.SCRRepo}}
image: sabayon/builder

{{if .Snapshot}}
tag_namespace: {{.SCRRepo}}
{{else}}
namespace: {{.SCRRepo}}
tag_namespace: {{.SCRRepo}}
{{end}}

artefact_path: artifacts
cache_image: "yes"
script:
- sark-localbuild
- eval 'rm artifacts/build_*.log || true'
{{if .Storage}}
storage: "{{.Storage}}"
storage_path: confs
{{end}}
type: docker
timeout: 64800
{{if .Recurring}}
planned: "{{.Recurring}}"
{{end}}
